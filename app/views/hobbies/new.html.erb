<div class="row">
  <div class="small-12 medium-10 medium-centered large-8 large-centered columns">
    <h1>New Hobby Form</h1>

    <%= form_for(@hobby) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>
  </div>
</div>
