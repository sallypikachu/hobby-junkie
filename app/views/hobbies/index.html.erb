<div class="full-height bg-img">
<div class="row">
  <div class="small-10 small-offset-1 large-12 columns">
    <div class="floating-container">

      <h1>Passions</h1>
      <ul>
        <% @hobbies.each do |hobby| %>
          <li><%= link_to hobby.name, hobby_path(hobby) %></li>
        <% end %>
      </ul>
      <div class="text-center">
        <a href="<%= new_hobby_path %>" class="button">Add a New Hobby!</a>
      </div>
    </div>
  </div>
</div>
</div>
