<div class="full-height bg-img">
<div class="row">
  <div class="small-12 medium-10 medium-centered large-8 large-centered columns">

    <div class="floating-container">
      <h1>Passions</h1>
    </div>
    <div class="floating-container">
      <% @hobbies.each do |hobby| %>
        </h4><%= link_to hobby.name, hobby_path(hobby) %></h4>
      <% end %>
    </div>
    <div class="text-center">
      <a href="<%= new_hobby_path %>" class="button">Add a New Hobby!</a>
    </div>
  </div>
</div>
</div>
